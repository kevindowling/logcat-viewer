{
  "name": "logcat-viewer",
  "displayName": "Android Dev Tools",
  "description": "Android development tools: create projects, build, run, and view logcat logs",
  "version": "1.1.1",
  "publisher": "kevindowling",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevindowling/logcat-viewer"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "android",
    "adb",
    "logcat",
    "mobile",
    "kotlin",
    "java"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "android-dev",
          "title": "Android",
          "icon": "resources/logcat-icon.svg"
        }
      ]
    },
    "views": {
      "android-dev": [
        {
          "id": "androidDevices",
          "name": "Devices",
          "visibility": "visible"
        },
        {
          "id": "androidActions",
          "name": "Actions",
          "visibility": "visible"
        },
        {
          "type": "webview",
          "id": "logcatView",
          "name": "Logcat",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "logcat-viewer.openPanel",
        "title": "Logcat: Open Panel",
        "icon": "$(device-mobile)"
      },
      {
        "command": "android.newProject",
        "title": "Android: New Project",
        "icon": "$(add)"
      },
      {
        "command": "android.buildAndRun",
        "title": "Android: Build and Run",
        "icon": "$(play)"
      },
      {
        "command": "android.build",
        "title": "Android: Build Debug APK",
        "icon": "$(tools)"
      },
      {
        "command": "android.buildRelease",
        "title": "Android: Build Release APK",
        "icon": "$(package)"
      },
      {
        "command": "android.clean",
        "title": "Android: Clean Project",
        "icon": "$(trash)"
      },
      {
        "command": "android.install",
        "title": "Android: Install APK",
        "icon": "$(desktop-download)"
      },
      {
        "command": "android.selectDevice",
        "title": "Android: Select Device",
        "icon": "$(device-mobile)"
      },
      {
        "command": "android.refreshDevices",
        "title": "Refresh Devices",
        "icon": "$(refresh)"
      },
      {
        "command": "android.runOnDevice",
        "title": "Run on This Device",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "android.newProject"
        },
        {
          "command": "android.buildAndRun"
        },
        {
          "command": "android.build"
        },
        {
          "command": "android.buildRelease"
        },
        {
          "command": "android.clean"
        },
        {
          "command": "android.install"
        },
        {
          "command": "android.selectDevice"
        }
      ],
      "view/title": [
        {
          "command": "android.refreshDevices",
          "when": "view == androidDevices",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "android.buildAndRun",
          "when": "view == androidDevices && viewItem == device",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "androidDevices",
        "contents": "No Android devices detected.\n[Refresh Devices](command:android.refreshDevices)\n\nMake sure ADB is installed and a device is connected."
      }
    ],
    "configuration": {
      "title": "Android Dev Tools",
      "properties": {
        "logcat-viewer.adbPath": {
          "type": "string",
          "default": "adb",
          "description": "Path to ADB executable"
        },
        "android.sdkPath": {
          "type": "string",
          "default": "",
          "description": "Path to Android SDK (uses ANDROID_HOME if not set)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.9.3"
  }
}
