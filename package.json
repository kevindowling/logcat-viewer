{
  "name": "logcat-viewer",
  "displayName": "Logcat Viewer",
  "description": "View and filter Android ADB logcat logs",
  "version": "1.0.3",
  "publisher": "kevindowling",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevindowling/logcat-viewer"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:logcatView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logcat",
          "title": "Logcat",
          "icon": "resources/logcat-icon.svg"
        }
      ]
    },
    "views": {
      "logcat": [
        {
          "type": "webview",
          "id": "logcatView",
          "name": "Logcat"
        }
      ]
    },
    "commands": [
      {
        "command": "logcat-viewer.openPanel",
        "title": "Logcat: Open Panel",
        "icon": "$(device-mobile)"
      }
    ],
    "configuration": {
      "title": "Logcat Viewer",
      "properties": {
        "logcat-viewer.adbPath": {
          "type": "string",
          "default": "adb",
          "description": "Path to ADB executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.9.3"
  }
}
